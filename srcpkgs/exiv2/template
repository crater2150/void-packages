# Template file for 'exiv2'
pkgname=exiv2
version=0.27.4.3
revision=1
wrksrc="exiv2-${version}-Source"
build_style=cmake
configure_args="-DEXIV2_BUILD_SAMPLES=OFF -DEXIV2_ENABLE_BMFF=ON"
makedepends="zlib-devel expat-devel"
short_desc="Image metadata manipulation"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://www.exiv2.org"
distfiles="https://pre-release.exiv2.org/builds/exiv2-${version}-Source.tar.gz"
checksum=6e35070eef367fd4a873e323f1934e8d4efea4cbc2f8d5b4c81d6324427148e4

